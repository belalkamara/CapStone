<%= form_with(model: @activity_events, local: true) do |form| %>
  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control", rows: 10 %>
      </div>

      <div class="actions">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :miles %>
        <%= form.number_field :miles, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :start_date %>
        <%= form.datetime_field :start_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :end_date %>
        <%= form.datetime_field :end_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :image %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.fields_for :types do |x| %>
          <%= x.label :event_type %>
          <%= x.text_field :name, class: "form-control" %>
        <% end %>
      </div>

      
    </div>
  </div>
<% end %>