<%= form_with(model: @user_miles, local: true) do |form| %> 
  <div class="form-group">
    <%= form.label :day %>
    <%= form.date_field :day, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :miles %>
    <%= form.number_field :miles, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %> 