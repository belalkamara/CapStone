<div class="col-md-3 bttm">
  <div class="card-body bord">
    <%= image_tag act_img(live_act.image, 'image'), height:'195px', width:'190px' %>
    <p class="card-text"><strong><%= link_to live_act.title.truncate_words(4), activity_show_path(live_act) %></strong></p>
    <div class="d-flex justify-content-between align-items-center">
      <ul class="list-unstyled mb-0">
        <li><small class="text-muted"><strong>Start Date: </strong><%= live_act.start_date %></small></li>
        <li><small class="text-muted"><strong>Miles: </strong><%= live_act.miles %></small></li>    
        <li><small class="text-muted"><strong>Status: </strong><%= live_act.status %></small></li> 
        
        <%= link_to 'Destroy', live_act, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>

        <%= link_to "Edit Activity", edit_activity_path(live_act), class: 'btn btn-warning btn-sm' %> 
      </ul>   
    </div>
  </div>
</div>

