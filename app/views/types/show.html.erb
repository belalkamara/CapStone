<header class="masthead">
  <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1><%= @type.title %> Page</h1>
            <span class="subheading">Where You Can See <%= @type.title %> Events</span>
          </div>
        </div>
      </div>
    </div>
  </div>  
</header>


<div>
  <%= render 'shared/activity_search_bar' %>
</div>

<div class="album py-5">
  <div class="container">
    <div class="row">
      
      <%= render partial: 'activities/activity_event', collection: @activity_events %>

      <%= paginate @activity_events %>
    </div>
  </div>
</div>
